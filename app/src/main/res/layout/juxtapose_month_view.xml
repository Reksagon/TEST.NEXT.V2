                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/colorPrimaryVariant"
                        android:textSize="18sp"
                        android:textStyle="bold" />

